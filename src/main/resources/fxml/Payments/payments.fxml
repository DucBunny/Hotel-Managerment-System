<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0"
      prefWidth="1440.0" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.app.controllers.Payments.PaymentsController">
    <children>
        <AnchorPane>
            <children>
                <Label fx:id="roleLabel" alignment="CENTER"
                       contentDisplay="CENTER" prefWidth="600.0"
                       text="Bạn đang đăng nhập với quyền ..."
                       textAlignment="CENTER" AnchorPane.leftAnchor="0.0"
                       AnchorPane.rightAnchor="0.0">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
            </children>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </AnchorPane>
        <HBox alignment="CENTER" prefHeight="70.0" spacing="40.0"
              style="-fx-background-color: #586995; -fx-background-radius: 20;">
            <children>
                <Button mnemonicParsing="false" onAction="#changeToHomePage"
                        prefHeight="50.0" prefWidth="130.0"
                        style="-fx-background-radius: 20;"
                        styleClass="btnHeader" text="Trang chủ"
                        textAlignment="CENTER" textFill="WHITE">
                    <HBox.margin>
                        <Insets left="55.0"/>
                    </HBox.margin>
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button mnemonicParsing="false" onAction="#changeToRooms"
                        prefHeight="50.0" prefWidth="130.0"
                        style="-fx-background-radius: 20;"
                        styleClass="btnHeader" text="Căn hộ"
                        textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button mnemonicParsing="false" onAction="#changeToResidents"
                        prefHeight="50.0" prefWidth="130.0"
                        style="-fx-background-radius: 20;"
                        styleClass="btnHeader" text="Cư dân"
                        textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button mnemonicParsing="false" onAction="#changeToRevenues"
                        prefHeight="50.0" prefWidth="130.0"
                        style="-fx-background-radius: 20;"
                        styleClass="btnHeader" text="Khoản thu"
                        textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button id="buttonActive" mnemonicParsing="false"
                        onAction="#changeToPayments" prefHeight="50.0"
                        prefWidth="130.0" style="-fx-background-radius: 20;"
                        styleClass="btnHeader" text="Thống kê"
                        textAlignment="CENTER" textFill="#424f70">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <MenuButton id="btnHeaderMenu" alignment="CENTER"
                            mnemonicParsing="false" prefHeight="50.0"
                            prefWidth="130.0" style="-fx-background-radius: 20;"
                            styleClass="btnHeader" text="Cài đặt"
                            textAlignment="CENTER" textFill="WHITE">
                    <items>

                        <MenuItem mnemonicParsing="false" onAction="#changeToPassword" text="Đổi mật khẩu" />
                        <MenuItem fx:id="MenuItem_SignUp"
                                  mnemonicParsing="false"
                                  onAction="#changeToSignUp"
                                  text="Tạo tài khoản" visible="false"/>
                        <MenuItem mnemonicParsing="false"
                                  onAction="#changeToSignIn" text="Đăng xuất"/>
                    </items>
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </MenuButton>
                <HBox alignment="CENTER_RIGHT" prefHeight="50.0" spacing="10.0"
                      style="-fx-background-color: #C2C9DB; -fx-border-radius: 15; -fx-background-radius: 25;">
                    <children>
                        <Label fx:id="nameLabel" prefHeight="50.0"
                               prefWidth="170.0" text="Xin chào">
                            <font>
                                <Font size="18.0"/>
                            </font>
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </Label>
                        <AnchorPane prefHeight="40.0" prefWidth="40.0"
                                    style="-fx-background-color: #FFFFFF; -fx-background-radius: 100%;">
                            <children>
                                <ImageView fitHeight="40.0" fitWidth="40.0"
                                           pickOnBounds="true"
                                           preserveRatio="true"
                                           AnchorPane.leftAnchor="0.0"
                                           AnchorPane.rightAnchor="0.0"
                                           AnchorPane.topAnchor="-0.5">
                                    <image>
                                        <Image url="@../../images/avt-admin.png"/>
                                    </image>
                                </ImageView>
                            </children>
                            <HBox.margin>
                                <Insets bottom="5.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                        </AnchorPane>
                    </children>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="3.0"/>
            </VBox.margin>
        </HBox>
        <VBox VBox.vgrow="ALWAYS">
            <children>
                <AnchorPane prefHeight="77.0">
                    <children>
                        <Label fx:id="contentLabel" alignment="TOP_CENTER"
                               contentDisplay="CENTER" styleClass="boldText"
                               text="CÁC HỘ" textAlignment="CENTER"
                               AnchorPane.leftAnchor="0.0"
                               AnchorPane.rightAnchor="0.0"
                               AnchorPane.topAnchor="0.0">
                            <font>
                                <Font size="32.0"/>
                            </font>
                        </Label>
                        <Button alignment="CENTER" contentDisplay="CENTER"
                                layoutX="20.0" layoutY="20.0"
                                mnemonicParsing="false"
                                onAction="#handleCreatePayment"
                                prefHeight="55.0" prefWidth="200.0"
                                styleClass="btn-create-payment" text="Thu phí"
                                textFill="WHITE" AnchorPane.rightAnchor="30.0"
                                AnchorPane.topAnchor="0.0">
                            <font>
                                <Font size="24.0"/>
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Button>
                    </children>
                </AnchorPane>
                <TableView fx:id="tablePayments" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="roomNumberPayments"
                                     prefWidth="246.3999481201172"
                                     text="Tên hộ"/>
                        <TableColumn fx:id="amountPayments"
                                     prefWidth="198.4000244140625"
                                     text="Số tiền đóng"/>
                        <TableColumn fx:id="datePayments"
                                     prefWidth="250.39996337890625"
                                     text="Ngày đóng"/>
                        <TableColumn fx:id="notePayments" prefWidth="140"
                                     text="Ghi chú"/>
                        <TableColumn fx:id="statusPayments"
                                     prefWidth="195.2000732421875"
                                     text="Trạng thái"/>
                        <TableColumn fx:id="actionPayments"
                                     prefWidth="195.2000732421875"
                                     text="Thao tác"/>
                    </columns>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </TableView>
            </children>
            <VBox.margin>
                <Insets bottom="20.0" top="30.0"/>
            </VBox.margin>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="15.0" right="15.0"/>
    </padding>
</VBox>
